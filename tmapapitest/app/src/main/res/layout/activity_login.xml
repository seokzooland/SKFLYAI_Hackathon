<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1FAFF"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_id"
        android:layout_width="260dp"
        android:layout_height="43dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/radius"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="아이디"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <requestFocus
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_pw"
        android:layout_width="260dp"
        android:layout_height="43dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/radius"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <requestFocus
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/cb_login"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="440dp"
        android:background="@drawable/radius"
        android:text="로그인 상태 유지"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="260dp"
        android:layout_height="48dp"
        android:layout_marginTop="470dp"
        android:background="@drawable/radius"
        android:backgroundTint="#5A92FF"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_goRegister"
        android:layout_width="45dp"
        android:layout_height="13dp"
        android:layout_marginTop="540dp"
        android:layout_marginEnd="90dp"
        android:background="#00ff0000"
        android:text="회원가입"
        android:textColor="#6B6B6B"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_findPw"
        android:layout_width="60dp"
        android:layout_height="13dp"
        android:layout_marginTop="540dp"
        android:background="#00ff0000"
        android:text="비밀번호 찾기"
        android:textColor="#6B6B6B"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/btn_goRegister"
        app:layout_constraintStart_toEndOf="@+id/btn_findId"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_findId"
        android:layout_width="50dp"
        android:layout_height="13dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="540dp"
        android:background="#00ff0000"
        android:text="아이디 찾기"
        android:textColor="#6B6B6B"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_logo1"
        android:layout_width="223dp"
        android:layout_height="219dp"
        android:layout_marginTop="95dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo1" />

</androidx.constraintlayout.widget.ConstraintLayout>